<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Đặt nền màu trắng hoặc màu tùy chỉnh -->
    <solid android:color="#FFFFFF" />

    <!-- Đặt bán kính bo tròn cho các góc -->
    <corners android:radius="8dp" />

    <!-- Đặt đường viền (stroke) -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Màu viền xám nhạt -->

    <!-- Đặt padding bên trong -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />

</shape>
