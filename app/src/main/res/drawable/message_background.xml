<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Định nghĩa hình dạng và màu nền -->
    <solid android:color="#2D2D2D" /> <!-- màu nền cho tin nhắn -->

    <!-- Định nghĩa các góc bo tròn -->
    <corners android:radius="12dp" /> <!-- bán kính bo tròn các góc -->

    <!-- Định nghĩa padding cho nội dung bên trong -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

    <!-- Thêm viền nếu cần -->
    <stroke
        android:width="1dp"
        android:color="#404040" /> <!-- màu viền cho tin nhắn -->
</shape>
